{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../src/components/types/fireData.d.ts",
    "../src/components/types/requestData.d.ts"
  ],
  "paths": {
    "firebase-functions/*": ["node_modules/firebase-functions/lib/*"]
  }
}
